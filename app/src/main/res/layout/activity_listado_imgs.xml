<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_listado_imgs"
    android:layout_margin="16dp"
    tools:context=".ListadoImgsActivity">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_id_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="id_img"
            />

        <TextView
            android:id="@+id/tv_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="archivo_ruta"
            />
    </LinearLayout>
    <Button
        android:id="@+id/bt_agregar_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay1"
        android:text="Agregar"
        android:textAllCaps="false"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/bt_eliminar_imgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay1"
        android:layout_alignParentEnd="true"
        android:text="Eliminar"
        android:textAllCaps="false"
        android:textSize="15sp"
        />

    <Button
        android:id="@+id/bt_modificar_players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lay1"
        android:layout_centerHorizontal="true"
        android:text="Modificar"
        android:textAllCaps="false"
        android:textSize="15sp"
        />

    <ListView
        android:id="@+id/listview_imgs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bt_agregar_image"
        />

</RelativeLayout>